// libs/shared/prisma/schema.prisma

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider      = "prisma-client-js"
  // "native" is for your local machine (Mac M1/M2)
  // "linux-musl-openssl-3.0.x" is for the Alpine Docker container
  binaryTargets = ["native", "linux-musl-openssl-3.0.x"]
}

// === User & Auth ===

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  image         String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // NextAuth Accounts (Used for Google/Gmail tokens)
  accounts      Account[]
  sessions      Session[]

  // App Specific Relations
  preferences   UserPreferences?
  cronJob       CronJob?
  stats         UsageStat[]
}

// NextAuth Standard Account Model
model Account {
  id                 String  @id @default(cuid())
  userId             String
  type               String
  provider           String
  providerAccountId  String
  refresh_token      String?  @db.Text
  access_token       String?  @db.Text
  expires_at         Int?
  token_type         String?
  scope              String?
  id_token           String?  @db.Text
  session_state      String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

// === Business Logic Models ===

model UserPreferences {
  id          String   @id @default(cuid())
  userId      String   @unique
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  // Timezone & Localization
  timezone    String   @default("UTC") // Inferred or Manual
  isManualTz  Boolean  @default(false)
  locale      String   @default("en-US")

  // Notification Config
  phoneNumber      String?  // For WhatsApp
  notifyOnNewEmail Boolean @default(true)
  digestMode       Boolean @default(false)
  digestFrequency  String  @default("daily") // 'hourly', 'daily', 'weekly'
  
  quietHoursStart  String? // e.g., "22:00"
  quietHoursEnd    String? // e.g., "08:00"
}

model CronJob {
  id        String   @id @default(cuid())
  userId    String   @unique
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  cronExpression String   @default("0 9 * * *") // Default: 9 AM daily
  nextRunAt      DateTime
  lastRunAt      DateTime?
  isActive       Boolean  @default(true)
  
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}

// === Statistics (No PII/Email Content) ===

model UsageStat {
  id              String   @id @default(cuid())
  userId          String
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  date            DateTime @default(now()) @db.Date // Bucket by day
  emailsProcessed Int      @default(0)
  emailsRead      Int      @default(0)
  summariesSent   Int      @default(0)
  whatsappSent    Int      @default(0)

  @@unique([userId, date])
}