// libs/shared/prisma/schema.prisma

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider      = "prisma-client-js"
  // "native" is for your local machine (Mac M1/M2)
  // "linux-musl-openssl-3.0.x" is for Intel/AMD64 Alpine
  // "linux-musl-arm64-openssl-3.0.x" is for ARM64 Alpine (Your setup)
  binaryTargets = ["native", "linux-musl-openssl-3.0.x", "linux-musl-arm64-openssl-3.0.x"]
}

// === User & Auth ===

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  image         String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // NextAuth Accounts (Used for Google/Gmail tokens)
  accounts      Account[]
  sessions      Session[]

  // App Specific Relations
  preferences   UserPreferences?
  cronJob       CronJob?
  stats         UsageStat[]
}

// NextAuth Standard Account Model
model Account {
  id                       String  @id @default(cuid())
  userId                   String
  type                     String
  provider                 String
  providerAccountId        String
  refresh_token            String?  @db.Text
  access_token             String?  @db.Text
  expires_at               Int?
  token_type               String?
  scope                    String?
  id_token                 String?  @db.Text
  session_state            String?
  refresh_token_expires_in Int?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

// === Business Logic Models ===

model UserPreferences {
  id          String   @id @default(cuid())
  userId      String   @unique
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  // Timezone & Localization
  timezone    String   @default("UTC") // Inferred or Manual
  isManualTz  Boolean  @default(false)
  locale      String   @default("en-US")

  // Notification Config
  phoneNumber      String?  // For WhatsApp
  notifyOnNewEmail Boolean @default(true)
  digestMode       Boolean @default(false)
  digestFrequency  String  @default("daily") // 'hourly', 'daily', 'weekly'
  
  quietHoursStart  String? // e.g., "22:00"
  quietHoursEnd    String? // e.g., "08:00"
}

model CronJob {
  id        String   @id @default(cuid())
  userId    String   @unique
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  cronExpression String   @default("0 9 * * *") // Default: 9 AM daily
  nextRunAt      DateTime
  lastRunAt      DateTime?
  isActive       Boolean  @default(true)
  
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}

// === Statistics (No PII/Email Content) ===

model UsageStat {
  id              String   @id @default(cuid())
  userId          String
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  date            DateTime @default(now()) @db.Date // Bucket by day
  emailsProcessed Int      @default(0)
  emailsRead      Int      @default(0)
  summariesSent   Int      @default(0)
  whatsappSent    Int      @default(0)

  @@unique([userId, date])
}

// === Blog/CMS Models ===

enum BlogPostStatus {
  DRAFT
  REVIEW
  PUBLISHED
  ARCHIVED
}

enum BlogTopicStatus {
  PENDING
  APPROVED
  REJECTED
  GENERATED // Topic has been converted to a BlogPost
}

// Dynamic trend-driven blog: keyword management with performance tracking
model TrendKeyword {
  id               String   @id @default(cuid())
  keyword          String   @unique
  category         String?  // e.g. "email productivity", "automation"
  searchVolume     Int?     // Estimated monthly searches
  competition      Float?   // 0.0-1.0
  relevanceScore   Float    // 0.0-1.0, AI-scored relevance to Inbox0
  trendScore       Float?   // 0.0-1.0
  trendDirection   String?  // "rising", "stable", "declining"
  isActive         Boolean  @default(true)
  usageCount       Int      @default(0)
  discoverySource  String?  // "google_trends", "newsapi", "reddit", "ai", etc.
  clusterId        String?
  cluster          KeywordCluster? @relation(fields: [clusterId], references: [id])
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  @@index([isActive, relevanceScore])
  @@index([clusterId])
  @@map("trend_keywords")
}

// Dynamic RSS/API source management
model TrendSource {
  id                 String   @id @default(cuid())
  name               String
  type               String   // "rss", "api", "social"
  url                String   @db.Text
  isActive           Boolean  @default(true)
  priority           Int      @default(0) // Higher = more important
  avgRelevanceScore  Float?
  articlesFound      Int      @default(0)
  articlesUsed       Int      @default(0)
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt

  @@map("trend_sources")
}

// Content pillar organization (e.g. "Email Productivity", "AI Automation")
model KeywordCluster {
  id               String         @id @default(cuid())
  name             String
  description      String?        @db.Text
  primaryKeywords  String[]       // JSON array of primary keywords
  priority         Int            @default(0)
  totalPosts       Int            @default(0)
  keywords         TrendKeyword[]
  createdAt        DateTime       @default(now())
  updatedAt        DateTime       @updatedAt

  @@map("keyword_clusters")
}

// Automated internal linking for SEO
model InternalLink {
  id         String   @id @default(cuid())
  fromPostId String
  toPostId   String
  anchorText String   @db.Text
  linkType   String?  // "contextual", "related", "pillar"
  fromPost   BlogPost @relation("InternalLinksFrom", fields: [fromPostId], references: [id], onDelete: Cascade)
  toPost     BlogPost @relation("InternalLinksTo", fields: [toPostId], references: [id], onDelete: Cascade)
  createdAt  DateTime @default(now())

  @@unique([fromPostId, toPostId])
  @@index([fromPostId])
  @@index([toPostId])
  @@map("internal_links")
}

model BlogPost {
  id          String         @id @default(cuid())
  title       String
  slug        String         @unique // For URL: inbox-0.com/blog/best-email-tools
  content     String         @db.Text // The full blog content (Markdown)
  seoTitle    String?        // Meta title for Google (max 60 chars)
  seoDesc     String?        // Meta description (max 160 chars)
  status      BlogPostStatus @default(DRAFT)
  
  // Audit trail
  authorId    String?        // User who approved/created
  publishedAt DateTime?      // When it went live
  
  // Relationship to source topic (if AI-generated from trend)
  topicId     String?        @unique
  topic       BlogTopic?     @relation(fields: [topicId], references: [id])
  
  // SEO / trend-driven fields
  primaryKeyword String?
  keywords       String[]    @default([]) // Related keywords used in post
  clusterName    String?
  wordCount      Int?
  readingTime    Int?        // Minutes
  metaScore      Float?      // SEO score 0-100
  lastRefreshedAt DateTime?
  
  // Internal linking
  linksFrom   InternalLink[] @relation("InternalLinksFrom")
  linksTo     InternalLink[] @relation("InternalLinksTo")
  
  createdAt   DateTime       @default(now())
  updatedAt   DateTime       @updatedAt

  @@index([status])
  @@index([publishedAt])
  @@map("blog_posts")
}

model BlogTopic {
  id              String          @id @default(cuid())
  title           String
  angle           String?
  sourceUrl       String?         // Original RSS link
  sourceHeadline  String?         // Original headline from RSS
  status          BlogTopicStatus @default(PENDING)
  
  // Audit trail
  approvedBy      String?         // User ID who approved
  approvedAt      DateTime?
  rejectedReason  String?         // Why it was rejected
  
  // Trend-driven / SEO fields
  keywords        String[]        @default([]) // Keywords this topic targets
  clusterName     String?
  searchVolume    Int?
  difficulty      Float?          // 0.0-1.0 estimated competition
  
  // Generated post relationship
  generatedPost   BlogPost?
  
  createdAt       DateTime        @default(now())
  updatedAt       DateTime        @updatedAt

  // Prevent duplicate topics from same source
  @@unique([sourceUrl])
  @@index([status])
  @@map("blog_topics")
}